<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Configuracion del tema de la app -->
    <style name="PruebaTalento" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDisabled">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDarker">@color/black</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorBackground">@color/white</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <item name="colorError">@color/red</item>
        <item name="colorErrorDull">@color/redLight</item>

        <item name="textColorPrimaryDarker">@color/black</item>
        <item name="textColorOnError">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="alphaDisabled">0.5</item>
    </style>

    <style name="BottomNavigation.Style" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_navigation_view_color_selection</item>
        <item name="itemTextColor">?attr/textColorPrimary</item>
    </style>


    <style name="BottomNavigationView.Text.Theme" parent="@style/ThemeOverlay.MaterialComponents.Dark">
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name= "RobotoTextViewStyle" parent= "android:Widget.TextView" >
        <item name= "android:fontFamily" > sans-serif </item>
        <item name= "android:textSize" > 12sp </item>
    </style>
    <style name= "RobotoButtonStyle" parent="Widget.AppCompat.Button" >
        <item name= "android:fontFamily" > sans-serif </item>
        <item name= "android:textSize" > 14sp </item>
        <item name= "android:textStyle" > bold </item>
        <item name= "android:textColor" > @color/colorPrimaryDark </item>
        <item name= "android:background" > @drawable/padel_button_selector </item>

    </style>
    <style name= "PadelEditTextStyle" parent="Widget.AppCompat.EditText" >
        <item name= "android:fontFamily" > sans-serif </item>
        <item name= "android:textSize" > 14sp </item>
        <item name= "android:textColorHint" > @color/colorPrimaryText </item>
        <item name= "android:textColor" > @color/colorPrimaryText </item>
        <item name= "android:background" > @drawable/padel_edit_text_style </item>
        <item name= "android:layout_width" > match_parent </item>
        <item name= "android:layout_height" > 40sp </item>
    </style>

    <style name= "PadelLocationInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu" >
        <item name= "android:fontFamily" > sans-serif </item>
        <item name= "android:textSize" > 14sp </item>
        <item name= "android:textColorHint" > @color/colorPrimaryText </item>
        <item name= "android:textColor" > @color/colorPrimaryText </item>
        <item name= "android:background" > @drawable/padel_edit_text_style </item>
    </style>

    <style name= "PadelEditTextStyleError" parent="Widget.AppCompat.EditText" >
        <item name= "android:fontFamily" > sans-serif </item>
        <item name= "android:textSize" > 14sp </item>
        <item name= "android:textColorHint" > @color/red </item>
        <item name= "android:textColor" > @color/red </item>
        <item name= "android:background" > @drawable/padel_edit_text_style </item>
        <item name= "android:layout_width" > match_parent </item>
        <item name= "android:layout_height" > 40sp </item>
    </style>
    <style name="TextView.Toolbar.Theme" parent="android:Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name= "android:textStyle" > bold </item>
    </style>
    <style name="TextView.Button.Theme" parent="android:Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:fontFamily"> sans-serif </item>
    </style>
    <style name="TextView.Body.Theme" parent="android:Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:fontFamily"> sans-serif </item>
    </style>
    <style name="TextView.Header.Theme" parent="android:Widget.TextView">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:fontFamily"> sans-serif </item>
    </style>
</resources>