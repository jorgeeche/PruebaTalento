<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="pruebatalento.operations.splash.SplashFragment"
        android:label="fragment_loading_data"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/inicio_to_login"
            app:destination="@+id/loginFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"
            />
        <action
            android:id="@+id/inicio_to_dashboard"
            app:destination="@+id/dashboardFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"
            />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="pruebatalento.operations.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >

        <action android:id="@+id/action_loginFragment_to_dashboardFragment"
            app:destination="@+id/dashboardFragment"
            app:popUpTo="@+id/loginFragment"
            app:popUpToInclusive="false"

            />
    </fragment>

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="pruebatalento.operations.dashboard.DashboardFragment"
        android:label="DashboardFragment"
        tools:layout="@layout/fragment_dashboard" >

        <action android:id="@+id/dashboard_to_detail"
            app:destination="@+id/characterDetailFragment"
            app:popUpTo="@+id/dashboardFragment"
            />
    </fragment>

    <fragment
        android:id="@+id/characterDetailFragment"
        android:name="pruebatalento.operations.characterdetail.CharacterDetailFragment"
        android:label="CharacterDetailFragment"
        tools:layout="@layout/fragment_character_detail" >
    </fragment>
</navigation>