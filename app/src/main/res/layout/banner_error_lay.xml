<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorError"
    android:paddingBottom="22dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/banner_message_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/banner_close_imageView"
        app:layout_constraintStart_toEndOf="@id/banner_imageView"
        app:layout_constraintTop_toTopOf="@id/banner_imageView"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Hey! Hay una nueva actualizaciÃ³n que es necesaria." />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/banner_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/banner_close_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/link_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:gravity="start"
        app:layout_constraintEnd_toEndOf="@id/banner_message_textView"
        app:layout_constraintStart_toStartOf="@id/banner_message_textView"
        app:layout_constraintTop_toBottomOf="@id/banner_message_textView"
        tools:text="ACTUALIZAR LA APLICACION" />
</androidx.constraintlayout.widget.ConstraintLayout>
